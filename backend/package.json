{
  "name": "store-weaver-backend",
  "version": "1.0.0",
  "description": "Backend API for Store Weaver - Kubernetes store provisioning platform",
  "main": "dist/index.js",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "migrate": "node -r dotenv/config node_modules/knex/bin/cli.js migrate:latest",
    "migrate:rollback": "node -r dotenv/config node_modules/knex/bin/cli.js migrate:rollback",
    "lint": "eslint src --ext .ts"
  },
  "dependencies": {
    "@kubernetes/client-node": "^0.20.0",
    "axios": "^1.6.2",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "knex": "^3.1.0",
    "pg": "^8.11.3",
    "winston": "^3.11.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/node": "^20.10.5",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3"
  }
}

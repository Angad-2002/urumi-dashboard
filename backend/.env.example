# Server
NODE_ENV=development
PORT=3000
HOST=0.0.0.0

# Database (PostgreSQL)
DATABASE_URL=postgresql://storeweaver:storeweaver123@localhost:5433/storeweaver

# Kubernetes (optional until provisioning is implemented)
KUBECONFIG=
ENVIRONMENT=local
HELM_CHART_PATH=../../../helm/store
HELM_CHART_PATH_MEDUSA=../../../helm/medusa-store

# Quotas
